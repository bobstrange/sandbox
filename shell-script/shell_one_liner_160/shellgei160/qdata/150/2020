<script defer>var textAd = function() {setTimeout(function(){
  console.log('pri');
  var obsPTA = new MutationObserver(function(records) {
    records.forEach(function(recod) {
      Array.from(recod.addedNodes).filter(function($node) {
        if ($node.nodeName === 'IFRAME') {
          return true;
        }
        return false;
      }).forEach(function($node) {
        if ($node.contentWindow.document.readyState === 'complete') {
          console.log('.');
          tadclip($node);
          return;
        }
        console.log(',');
        $node.contentWindow.document.addEventListener('DOMContentLoaded', function(){setTimeout(tadclip($node), 50)});
        return;
      });
    });
  });

  var tadclip = function ($obj) {
    var $base, $body, $style, $tmp;
    $obj.parentNode.parentNode.style.height = 'auto';
    $base = $obj.contentWindow.document.querySelector('html');
    $body = $obj.contentDocument.querySelector('body');
    if (typeof $base === 'undefined' || typeof $body === 'undefined') {
      return;
    }
    $style = document.createElement('style');
    $style.textContent = 'body{font-family:Arial,sans-serif;font-size:14px;line-height:18px;padding-top:10px}span{display:block;border-bottom:1px solid #E5E5E5;padding-bottom:10px}a{color:#05C;text-decoration:none;padding:4px 0}a span{border-bottom:none;padding-bottom:2px}b{padding:0 0 0 18px;background:url(/assets/templates/gihyojp2007/image/pr13x13.gif) 0px 0 no-repeat}a:hover{color:#38C;text-decoration:underline}body>br{display:none}';
    $body.insertBefore($style, $body.firstChild);
    $tmp = $body.querySelector('.GoogleActiveViewElement');
    if (typeof $tmp === 'object' && $tmp !== null && $tmp.lastElementChild.nodeName === 'BR') {
      $tmp.removeChild($tmp.lastElementChild);
    }
    $tmp.style.display = 'inline-block';
    $tmp.style.width = '100%';
    h = $base.offsetHeight;
    $obj.height = h;
    $style = void 0;
    $tmp = void 0;
    $body = void 0;
    $base = void 0;
    $obj = void 0;
    return;
  }

  var $target = document.querySelector('#primaryTopTextPr .textAdList01, #primaryTopTextPr .textAdList02');
  if (typeof $target === 'object' && $target !== null) {
    $target.querySelectorAll('.is-banner').forEach(function($node){$node.style.height = '0';});
    var $ptt = document.getElementById('primaryTopTextPr');
    if (typeof $ptt === 'object' && $ptt !== null) {
      $ptt.style.height = 'auto';
      $ptt = void 0;
    }

    obsPTA.observe($target, {childList: true, subtree: true});
    $target = void 0;

    setTimeout(function(){
      obsPTA.disconnect();
      document.querySelectorAll('#primaryTopTextPr .is-banner > script').forEach(function($node) {
        $node.parentNode.parentNode.removeChild($node.parentNode);
        $node = void 0;
      });
    }, 5000);
  }
}, 50);
setTimeout(function(){
  console.log('sec');
  var obsSTA = new MutationObserver(function(records) {
    records.forEach(function(recod) {
      Array.from(recod.addedNodes).filter(function($node) {
        if ($node.nodeName === 'IFRAME') {
          return true;
        }
        return false;
      }).forEach(function($node) {
        if ($node.contentWindow.document.readyState === 'complete') {
          console.log(':');
          ctadclip($node);
          return;
        }
        console.log(';');
        $node.contentWindow.document.addEventListener('DOMContentLoaded', function(){setTimeout(ctadclip($node), 50)});
        return;
      });
    });
  });

  var ctadclip = function ($obj) {
    var $base, $body, $style, $tmp;
    $obj.parentNode.parentNode.style.height = 'auto';
    $base = $obj.contentWindow.document.querySelector('html');
    $body = $obj.contentDocument.querySelector('body');
    if (typeof $base === 'undefined' || typeof $body === 'undefined') {
      return;
    }
    $style = document.createElement('style');
    $style.textContent = 'body{font-family:Arial,sans-serif;font-size:12px;line-height:16px;padding-top:4px;text-rendering:optimizeLegibility;-webkit-font-feature-settings:"kern","liga","palt";-moz-font-feature-settings:"kern","liga","palt";font-feature-settings:"kern","liga","palt"}span{display:block}a{color:#05C;text-decoration:none;font-size:14px;line-height:19px}b{border-bottom:none;padding-bottom:2px}b{padding:6px 0 0 15px;background:url(/assets/templates/gihyojp2007/image/bg/pr_02.gif) 0px 10px no-repeat}a:hover{color:#38C;text-decoration:underline}body>br{display:none}';
    $body.insertBefore($style, $body.firstChild);
    $tmp = $body.querySelector('.GoogleActiveViewElement');
    if (typeof $tmp === 'object' && $tmp !== null && $tmp.lastElementChild.nodeName === 'BR') {
      $tmp.removeChild($tmp.lastElementChild);
    }
    $tmp.style.display = 'inline-block';
    $tmp.style.width = '100%';
    h = $base.offsetHeight;
    $obj.height = h;
    $style = void 0;
    $tmp = void 0;
    $body = void 0;
    $base = void 0;
    $obj = void 0;
    return;
  }

  var $target = document.querySelector('#secondaryTopTextPr .prList01');
  if (typeof $target === 'object' && $target !== null) {
    $target.querySelectorAll('.is-banner').forEach(function($node){$node.style.height = '0';});
    var $stt = document.getElementById('secondaryTopTextPr');
    if (typeof $stt === 'object' && $stt !== null) {
      $stt.style.height = 'auto';
      $stt = void 0;
    }

    obsSTA.observe($target, {childList: true, subtree: true});
    $target = void 0;

    setTimeout(function(){
      obsSTA.disconnect();
      document.querySelectorAll('#secondaryTopTextPr .is-banner > script').forEach(function($node) {
        $node.parentNode.parentNode.removeChild($node.parentNode);
        $node = void 0;
      });
    }, 5000);
  }
}, 50);
